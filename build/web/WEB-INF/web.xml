<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>pmsservlet</servlet-name>
        <servlet-class>pmsservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payrollservlet</servlet-name>
        <servlet-class>payrollservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>payroll</servlet-name>
        <servlet-class>payrollservlet.payroll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signuppayroll</servlet-name>
        <servlet-class>payrollservlet.signuppayroll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginpayroll</servlet-name>
        <servlet-class>payrollservlet.loginpayroll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>payrollservlet.signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signupserver</servlet-name>
        <servlet-class>payrollservlet.signupserver</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pmsservlet</servlet-name>
        <url-pattern>/pmsservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payrollservlet</servlet-name>
        <url-pattern>/payrollservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>payroll</servlet-name>
        <url-pattern>/payroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signuppayroll</servlet-name>
        <url-pattern>/signuppayroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginpayroll</servlet-name>
        <url-pattern>/loginpayroll</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signupserver</servlet-name>
        <url-pattern>/signupserver</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
